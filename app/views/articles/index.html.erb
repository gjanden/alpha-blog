<h1>All Articles</h1>
<p>
  <%= link_to "Create New Article", new_article_path %>
</p>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </tr>
  <% @articles.each do |a| %>
  <tr>
    <td><%= a.id %></td>
    <td><%= a.title %></td>
    <td><%= a.description %></td>
    <td>
      <span>
        <%= link_to "Edit", edit_article_path(a) %>
      </span>
      <span>
        <%= link_to "View", article_path(a), method: :get %>
      </span>
      <span>
        <%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"} %>
      </span>
    </td>
  </tr>
  <% end %>
</table>
